<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="paixaoporti.com.br.listadecompras.dica3Activity"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView0"
        android:layout_width="361dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:text="  Levar a(s) criança(s) ou não?  "
        android:textStyle="bold"
        android:textSize="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView00"
            android:layout_width="354dp"
            android:layout_height="445dp"
            android:layout_gravity="center"
            android:text="  Se for sem a(s) criança(s), você evita a pressão para comprar produtos supérfluos, já que os pequenos são alvos fáceis para o marketing. Por outro lado, se levá-la(s), tem a chance de ensinar que não se pode comprar tudo o que quer."
            android:textSize="22dp" />
    </ScrollView>

    <Button
        android:id="@+id/voltar3id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="#66CDAA"
        android:textColor="#ffffff"
        android:text="Voltar"/>

</LinearLayout>
