<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="layout.BebidasFragment"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Bebidas"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textColorLink="@color/colorAccent"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/C_Bebidasid"
            android:layout_marginLeft="8dp"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cpc" />

        <EditText
            android:id="@+id/textoBebidaid"
            android:layout_width="222dp"
            android:layout_height="54dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="5dp"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/botaoBebidaid"
            android:layout_width="80dp"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/adicionar" />

    </LinearLayout>

    <ListView
        android:id="@+id/listaBebidaid"
        android:layout_width="match_parent"
        android:layout_height="417dp"
        android:background="@drawable/bk" />

</LinearLayout>
